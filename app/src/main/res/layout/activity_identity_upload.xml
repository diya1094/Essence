<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="0dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Verify Identity"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="25dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/innerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify your identity"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To list your property, we need to verify the identity of person who owns the property. This helps us ensure the security of our platform and protect our users."
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginBottom="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload documents"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginBottom="13dp" />

            <!-- Government ID Card -->
            <LinearLayout
                android:id="@+id/govtIdCard"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_box"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:layout_marginBottom="14dp">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/ic_govt_id"
                    android:scaleType="centerInside"
                    android:layout_marginEnd="13dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Government ID"
                        android:textStyle="bold"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload a clear photo of your government-issued ID"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:paddingTop="1dp"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Proof of Address Card -->
            <LinearLayout
                android:id="@+id/addressCard"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_box"
                android:gravity="center_vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/ic_address"
                    android:scaleType="centerInside"
                    android:layout_marginEnd="13dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Proof of Address"
                        android:textStyle="bold"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload a recent utility bill or bank statement with your address"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:paddingTop="1dp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/continueToPaymentBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Continue"
        android:backgroundTint="@color/primaryColor"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:enabled="false"/>
</LinearLayout>
