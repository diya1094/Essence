<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/card_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvSellerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seller Name"
        android:textStyle="bold"
        android:textSize="16sp" />

    <!--    <TextView-->
    <!--        android:id="@+id/tvPropertyTitle"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="Property Title"-->
    <!--        android:textSize="14sp" />-->

    <TextView
        android:id="@+id/tvPropertyDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Property description here..."
        android:textSize="13sp"
        android:paddingBottom="2dp" />
    <TextView
        android:id="@+id/tvPropertyAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="13sp"
        android:paddingBottom="2dp" />
    <TextView
        android:id="@+id/tvPropertyPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="13sp"
        android:paddingBottom="2dp" />
    <TextView
        android:id="@+id/tvYearBuilt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Years"
        android:textSize="13sp"
        android:paddingBottom="2dp" />
    <TextView
        android:id="@+id/tvPropertyType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Property Type"
        android:textSize="13sp"
        android:paddingBottom="2dp" />
    <TextView
        android:id="@+id/tvPropertyStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Property Status"
        android:textSize="13sp"
        android:paddingBottom="2dp" />

    <!-- NECESSARY ADDITION: TextView for the final status message -->
    <TextView
        android:id="@+id/tvFinalAdminStatusMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Property Approved by Admin"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:visibility="gone" /> <!-- Initially hidden -->

    <!-- This LinearLayout already groups your buttons. We will give it an ID. -->
    <LinearLayout
        android:id="@+id/layoutAdminActionButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"/>

    <!-- Row 1: Approve + Reject -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btnApprove"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="@color/green"
            android:text="Approve"
            android:textColor="@android:color/white"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btnReject"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="@color/red"
            android:text="Reject"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- Row 2: Change button -->
    <Button
        android:id="@+id/btnRequestChange"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/orange"
        android:text="Change"
        android:textColor="@android:color/white"/>
</LinearLayout>
