<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F4F0"
    android:padding="24dp"
    tools:context=".ChooseRoleActivity">

    <TextView
        android:id="@+id/tvChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvChoose"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#4E342E"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBuyer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvChoose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/white"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgBuyer"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:contentDescription="Buyer Image"
                android:src="@drawable/buyer_1"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buyer"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:textColor="#212121" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find your dream home with ease"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="10dp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btnBuyer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue as Buyer"
                android:textColor="@android:color/white"
                android:backgroundTint="#8B572A"
                android:minHeight="50dp"
                android:minWidth="180dp"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSeller"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/cardBuyer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/white"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgSeller"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:contentDescription="Seller Image"
                android:scaleType="centerCrop"
                android:src="@drawable/seller_1"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seller"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:textColor="#212121" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Showcase and sell your property faster"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="10dp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btnSeller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue as Seller"
                android:textColor="@android:color/white"
                android:backgroundTint="#8B572A"
                android:minHeight="50dp"
                android:minWidth="180dp"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
